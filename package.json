{
  "name": "english",
  "version": "1.0.0",
  "main": "js/main.js",
  "author": "Fabio Tovar",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist/{css/*,js/*,images/*}",
    "scss": "node-sass --output-style compressed -o dist/scss ./scss",
    "lint": "eslint ./js || true",
    "lint-scss": "stylelint ./scss/*.scss --syntax scss || true",
    "uglify": "mkdirp dist/js -p && uglifyjs ./js/*.js -m -c -o dist/js/main.min.js",
    "imagemin": "imagemin ./images/* -o dist/images",
    "serve": "browser-sync start --server --files \"dist/css/*.css, dist/js/*.js, **/*.html, !node_modules/**/*.html\"",
    "build:css": "run-s lint-scss scss",
    "build:js": "run-s lint uglify",
    "build:images": "run-s imagemin",
    "build": "run-s build:*",
    "watch:css": "onchange \"./scss\" -- run-s build:css",
    "watch:js": "onchange \"./js\" -- run-s build:js",
    "watch:images": "onchange \"./images\" -- run-s build:images",
    "watch": "run-p serve watch:*",
    "postinstall": "run-s build watch"
  },
  "devDependencies": {
    "autoprefixer": "^9.0.1",
    "browser-sync": "^2.12.8",
    "eslint": "^5.2.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.5.4",
    "stylelint": "^9.4.0",
    "uglify-es": "^3.3.10"
  }
}
